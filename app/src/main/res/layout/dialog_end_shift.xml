<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="32dp">

    <TextView
        android:id="@+id/tvJobTitleLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp"
        android:text="Select Job:" />

    <Spinner
        android:id="@+id/spinnerJobs"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_below="@id/tvJobTitleLabel"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/tvHourlyFeeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinnerJobs"
        android:layout_marginTop="20dp"
        android:text="Hourly Fee:" />

    <EditText
        android:id="@+id/etHourlyFee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvHourlyFeeLabel"
        android:layout_marginTop="8dp"
        android:hint="Hourly Fee"
        android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/tvEndTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/etHourlyFee"
        android:layout_marginTop="24dp"
        android:text="End Time: " />

    <TextView
        android:id="@+id/tvFinalDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvEndTime"
        android:layout_marginTop="18dp"
        android:text="Shift Duration: " />

    <TextView
        android:id="@+id/tvShiftWage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvFinalDuration"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="Wage: "
        android:textSize="20dp" />

    <Button
        android:id="@+id/btnCreateShift"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvShiftWage"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:gravity="center"
        android:text="Create Shift" />
</RelativeLayout>
