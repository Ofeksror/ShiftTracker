<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="30dp">

    <TextView
        android:id="@+id/tvShiftDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="4dp"
        android:text="00:00:00"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/tvShiftStartTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="2dp"
        android:text="Since "
        android:textSize="20sp" />

    <EditText
        android:id="@+id/etBonus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:hint="Bonus"
        android:inputType="numberDecimal" />


    <EditText
        android:id="@+id/etNotes"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="8dp"
        android:hint="Notes" />

    <Button
        android:id="@+id/btnEndShift"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:text="End Shift" />

    <Button
        android:id="@+id/btnCancelLiveShift"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="16dp"
        android:background="#00FFFFFF"
        android:padding="0dp"
        android:text="Cancel Live Shift"
        android:textColor="@color/colorSubtleText" />
</LinearLayout>
